

<div class = "row">
  <div class="col-md-8">
   <% @list.items.each do |one_item_from_the_list| %>
   <%= render partial: 'items/item', locals: { item: one_item_from_the_list} %>
      <%= item.body %>
        <small>
          Time left before expired: <%= (item.days_left) %>
        </small>
      </h4>
          <div>
            <%= link_to "", [@list, item], method: :delete, class: 'glyphyicon glyphicon-ok' %>
          </div>
        </div>
          <div>
            <% if @list.nil? %>
            <%= link_to "New To-do List", new_list_path, class: 'btn btn-success' %>      
          <% end %>
          </div>
<% end %>

    <%= render "items/form" %>
  </div>
</div>
